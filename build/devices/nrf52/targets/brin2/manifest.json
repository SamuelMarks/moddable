{
	"build": {
		"USE_USB": "0",
		"USE_QSPI": "1",
		"DEBUGGER_SPEED": "921600",
		"FTDI_TRACE": "-DUSE_FTDI_TRACE=1",
		"QSPI_INI_PATH": "$(MODDABLE)/build/devices/nrf52/targets/brin2/QspiDefault.ini"
	},
	"include": [
		"$(MODULES)/drivers/ili9341/manifest.json",
		"$(MODULES)/pins/digital/monitor/manifest.json",
		"$(MODULES)/drivers/button/manifest.json",
		"$(MODULES)/drivers/led/manifest.json",
		"$(MODULES)/files/preference/manifest.json"
	],
	"modules": {
		"setup/target": "./setup-target"
	},
	"preload": [
		"setup/target"
	],
	"config": {
		"screen": "ili9341",
		"touch": "",
		"autobacklight": 1,
		"disp_pwr_en": 38,
		"disp_led_on": 39,
		"disp_reset": 25,

		"led1_pin": 37,
		"led2_pin": 36,
		"led3_pin":  -1,

		"button1_pin": 33,
		"button2_pin": 34,
		"button3_pin": 35,
		"button4_pin": -1,
		"button5_pin": 3,

		"buttons": {
			"menu": {
				"pin": 33,
				"invert": true
			},
			"ok": {
				"pin": 34,
				"invert": true
			},
			"info": {
				"pin": 35,
				"invert": true
			},
			"power": {
				"pin": 3,
				"invert": true
			}
		},
		"led": {
			"green": {
				"pin": 36,
				"invert": true
			},
			"red": {
				"pin": 37,
				"invert": true
			}
		},
		"displaylight": {
			"pin": 39,
			"on": 1,
			"off": 0
		} 

	},
	"defines": {
		"display": {
			"power_pin": "NRF_GPIO_PIN_MAP(1,6)"
		},

		"debugger": {
			"tx_pin": "NRF_GPIO_PIN_MAP(0,4)",
			"rx_pin": "NRF_GPIO_PIN_MAP(0,5)",
			"baudrate": "NRF_UARTE_BAUDRATE_921600"
		},
		"spi": {
			"interface": "3",
			"hz": "32000000",
			"miso_pin": -1,
			"mosi_pin": "NRF_GPIO_PIN_MAP(0,15)",
			"sck_pin": "NRF_GPIO_PIN_MAP(0,13)",
			"high_power": 1
		},
		"ili9341": {
			"spi_port": 3,
			"backlight_pin": "NRF_GPIO_PIN_MAP(1,7)",
			"backlight_on": 1,
			"width": 240,
			"height": 240,
			"hz": "32000000",
			"cs_pin": "NRF_GPIO_PIN_MAP(0,14)",
			"dc_pin": "NRF_GPIO_PIN_MAP(0,16)",
			"rst_pin": "NRF_GPIO_PIN_MAP(0,25)",
            "registers": [
				"0x11, 0,",
				"255, 120,",
				"0x36, 1, 0x00,",
				"0x3A, 1, 0x05,",
				"0xB2, 5, 0x0C, 0x0C, 0x00, 0x33, 0x33,",
				"0xB7, 1, 0x75,",
				"0xBB, 1, 0x3D,",
				"0xC2, 1, 0x01,",
				"0xC3, 1, 0x19,",
				"0xC4, 1, 0x20,",
				"0xC6, 1, 0x0F,",
				"0xD0, 2, 0xA4, 0xA1,",
				"0xD6, 1, 0xA1,",
				"0xE0, 14, 0x70, 0x04, 0x08, 0x09, 0x09, 0x05, 0x2A, 0x33, 0x41, 0x07, 0x13, 0x13, 0x29, 0x2F,",
				"0xE1, 14, 0x70, 0x03, 0x09, 0x0A, 0x09, 0x06, 0x2B, 0x34, 0x41, 0x07, 0x12, 0x14, 0x28, 0x2E,",
				"0x21, 0,",
				"0x29, 0,",
				"0x2A, 4, 0x00, 0x00, 0x00, 0xEF,",
				"0x2B, 4, 0x00, 0x00, 0x00, 0xEF,",
				"0x2C, 0,",
				"255, 0"
            ]
		}
	}
}
